# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                           controllers.Application.index

GET         /location/:name             controllers.Application.location(name: String)
GET         /mapping/:loca/:ssid        controllers.Application.mapping(loca: String, ssid: String)

# REST
POST        /capture                    controllers.Application.capture
GET         /config                     controllers.Application.config

# DB
GET         /dbe                        controllers.Application.dbe
GET         /dbi                        controllers.Application.dbi

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
